---
layout: layouts/base.njk
title: "Industries"
description: "Industries of EasyHR HRMS and Payroll software"
eleventyExcludeFromCollections: true
---
<!-- Hero Start -->
<section class="bg-half d-table w-100" style="background: url('/assets/images/bg/2.jpg') center center; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="page-next-level">
                    <h4 class="title text-white title-dark"> {{ title }} </h4>
                    <div class="page-next">
                        <nav aria-label="breadcrumb" class="d-inline-block">
                            <ul class="breadcrumb bg-white rounded shadow mb-0">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
<div class="position-relative">
    <div class="shape overflow-hidden text-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!-- Hero End -->

 <section class="section">
    <div class="container">
        <div id="grid" class="row">
            {% for industry in collections.industries %}
                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2 picture-item" >
                    <div class="card blog border-0 work-container work-classic shadow rounded-md overflow-hidden">
                        <img src="{{ industry.data.featureImage }}" class="img-fluid work-image" alt="{{feature.data.title}}" width=400 height=270>
                        <div class="card-body">
                            <div class="content">
                                <a href="{{industry.url}}" class="badge badge-link bg-primary">{{industry.data.title}}</a>
                                <h5 class="mt-3"><a href="{{ industry.url }}" class="text-dark title">{{industry.data.title}}</a></h5>
                                <p class="text-muted">{{industry.data.description}}</p>
                                <a href="{{ industry.url }}" class="text-primary h6">Read More about {{ industry.data.title | truncate(40) }} <i class="uil uil-angle-right-b align-middle"></i></a>
                            </div>
                        </div>
                    </div>
                </div><!--end col-->
            {% endfor %}
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->