<!-- Feature Start -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title mb-4 pb-2">
                    <h4 class="title mb-4">Key Features</h4>
                    <p class="para-desc text-muted mb-0">Start working with <span class="text-primary fw-bold">EasyHR</span> that can provide everything you need to effectively manage and connect with your employees.</p>
                </div>
            </div><!--end col-->
        </div><!--end row-->

        <div class="row align-items-center">
            {% for feature in collections.features %}
                {% if feature.data.showOnHomePage %}
                    <div class="col-lg-4 col-md-6 mt-4 pt-2">
                        <div class="card border-0 features feature-clean course-feature p-4 overflow-hidden shadow">
                            <div class="icons text-primary text-center">
                                <i class="uil uil-{{ feature.data.icon }} d-block rounded h3 mb-0"></i>
                            </div>
                            <div class="card-body p-0 mt-4">                                            
                                <a href="{{ feature.url }}" class="title h5 text-dark">{{ feature.data.title }}</a>
                                <p class="text-muted mt-2">{{ feature.data.description }}</p>
                                <a href="{{ feature.url }}" class="text-primary read-more">{{feature.data.title}} Details <i class="uil uil-angle-right-b"></i></a>
                                <i class="uil uil-{{ feature.data.icon }} text-primary full-img"></i>
                            </div>
                        </div>
                    </div><!--end col-->
                {% endif %}
            {% endfor %}

            <div class="col-12 mt-4 pt-2 text-center">
                <a href="/features/" class="btn btn-primary"
                > More Features <i class="uil uil-angle-right align-middle"></i
                ></a>
            </div>
            <!--end col-->
            
        </div><!--end row-->
    </div><!--end container-->
</section>

