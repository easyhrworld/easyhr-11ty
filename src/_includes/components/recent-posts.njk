<div class="card shadow rounded border-0 mt-4">
    <div class="card-body">
        <div class="row">

        {% for post in collections.posts | reverse %}
            {% if loop.index0 < 3 %}
            <div class="col-lg-4 mt-4 pt-2">
                <div class="card blog rounded border-0 shadow">
                    <div class="position-relative">
                        <img loading="lazy" src="{{post.data.featureImage}}" width=340 height=255 class="card-img-top rounded-top" alt="{{post.data.title}}">
                    <div class="overlay rounded-top bg-dark"></div>
                    </div>
                    <div class="card-body content">
                        <h5><a href="{{post.url}}" class="card-title title text-dark">{{post.data.title | truncate(35) }}</a></h5>
                        <div class="post-meta d-flex justify-content-between mt-3">
                            <a href="{{post.url}}" class="text-muted readmore">Read More - {{ post.data.title | truncate(25)}}<i class="uil uil-angle-right-b align-middle"></i></a>
                        </div>
                    </div>
                    <div class="author">
                        <small class="text-light user d-block"><i class="uil uil-user"></i> {{post.data.author}}</small>
                        <small class="text-light date"><i class="uil uil-calendar-alt"></i> {{ post.date | readableDate }}</small>
                    </div>
                </div>
            </div><!--end col-->
            {% endif %}
        {% endfor %}
        </div><!--end row-->
    </div>
</div>