---
pagination:
  data: collections.blogCategories
  size: 1
  alias: category
permalink: /category/{{ category.slug }}/
---
{% extends "layouts/base.njk" %}

{% block content %}
    {% set posts = collections.blogposts | include("data.categories", category.title) %}
    <!-- Hero Start -->
    <section class="bg-half bg-light d-table w-100" style="background: url('/assets/images/bg/blog-bg.jpg') top center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 text-center">
                    <div class="page-next-level">
                        <h4 class="display-2 text-secondary"> {{ category.title }} </h4>
                        <div class="page-next">
                            <nav aria-label="breadcrumb" class="d-inline-block">
                                <ul class="breadcrumb bg-white rounded shadow mb-0">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item active"><a href="/blog/">Blog</li>
                                    <li class="breadcrumb-item active" aria-current="page">{{ category.title }}</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>  <!--end col-->
            </div><!--end row-->
        </div> <!--end container-->
    </section><!--end section-->
    <!-- Hero End -->

    <!-- Shape Start -->
    <div class="position-relative">
        <div class="shape overflow-hidden text-white">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>
    <!--Shape End-->

    <!-- Blog Start -->
    <section class="section">
        <div class="container">
            <div class="row">
                <!-- BLog Start -->
                <div class="col-lg-8 col-md-6">
                    <div class="row">
                        {% for post in posts %}
                            <div class="col-lg-6 col-md-12 mb-4 pb-2">
                                <div class="card blog rounded border-0 shadow">
                                    <div class="position-relative">
                                        <img src="{{post.data.featureImage}}" class="card-img-top rounded-top" alt="{{post.data.title}}" width=221 height=295 loading="lazy">
                                        <div class="overlay rounded-top bg-dark"></div>
                                    </div>
                                    <div class="card-body content">
                                        <h5><a href="{{ post.url | url }}" class="card-title title text-dark">{{ post.data.title }}</a></h5>
                                        <div class="post-meta d-flex justify-content-between mt-3">
                                            <a href="{{ post.url | url }}" class="text-muted readmore">Read More - {{ post.data.title | truncate(20)}} <i class="uil uil-angle-right-b align-middle"></i></a>
                                        </div>
                                    </div>
                                    <div class="author">
                                        <small class="text-light user d-block"><i class="uil uil-user"></i> {{ post.data.author }}</small>
                                        <small class="text-light date"><i class="uil uil-calendar-alt"></i> {{ post.data.date | readableDate}}</small>
                                    </div>
                                </div>
                            </div><!--end col-->
                        {% endfor %}
                    </div><!--end row-->
                </div><!--end col-->
                <!-- BLog End -->

                {% include "components/sidebar.njk" %}
            </div><!--end row-->
        </div><!--end container-->
    </section><!--end section-->
    <!-- Blog End -->    
    {% include "components/getting-started-form.njk" %}
{% endblock %}
