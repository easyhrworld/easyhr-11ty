---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for page in collections.all %}
       {% if not page.data.draft and not page.data.sitemapIgnore %}
        <url>
            <loc>{{ settings.url }}{{ page.url | url }}</loc>
            <lastmod>{{ page.date.toISOString() }}</lastmod>
            <changefreq>{{ page.data.changeFreq if page.data.changeFreq else "weekly" }}</changefreq>
            <priority>{{ page.data.priority if page.data.priority else 1 }}</priority>
        </url>
        {% endif %}
    {% endfor %}
    {% for page in collections.blogCategories %}
       {% if not page.data.draft and not page.data.sitemapIgnore %}
        <url>
            <loc>{{ settings.url }}/category/{{ page.slug | url }}</loc>
            <lastmod>{{ page.date }}</lastmod>
            <changefreq>{{ page.data.changeFreq if page.data.changeFreq else "weekly" }}</changefreq>
            <priority>{{ page.data.priority if page.data.priority else 1 }}</priority>
        </url>
        {% endif %}
    {% endfor %}
    {% for page in collections.blogTags %}
        {% if not page.data.draft and not page.data.sitemapIgnore %}
        <url>
            <loc>{{ settings.url }}/tags/{{ page.slug | url }}</loc>
            <lastmod>{{ page.date }}</lastmod>
            <changefreq>{{ page.data.changeFreq if page.data.changeFreq else "weekly" }}</changefreq>
            <priority>{{ page.data.priority if page.data.priority else 1 }}</priority>
        </url>
        {% endif %}
    {% endfor %}
    
</urlset>